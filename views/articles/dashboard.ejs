<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <title>Twitter</title>
</head>

<body>
    <%-include('_user_bar'); %>
    <div class="container">
        <!-- TITULO  -->
        <%-include('_logo'); %>
        <!-- BUTTON -->
        <div class="d-flex justify-content-end m-2">
            <a class="btn btn-danger btn-lg" style="background-color:#ec5569;" href="/articles/new" role="button">
                <i class="bi bi-chat-square-heart"></i>
                Publicar
            </a>
        </div>
        <% articles.forEach(article=> { %>
            <div class="card">
                <figure class="p-3">
                    <blockquote class="blockquote">
                        <p class="card-text">
                            <%= article.markdown%>
                        </p>
                    </blockquote>
                    <figcaption class="blockquote-footer">
                    Por <%= article.author %> en <strong><cite title="Source Title"><%= article.title %></cite></strong>.
                    <p class="mt-3"><%= article.likes %> Me gusta.</p>
                    </figcaption>
                </figure>
            
            
                <div class="d-flex justify-content-end m-2">
                    <form action="/articles/<%= article.id%>" method="POST">
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="bi bi-hand-thumbs-up"></i> Me gusta
                        </button>
                    </form>
                    <a class="btn btn-success me-2" href="/articles/<%= article.slug%>" role="button">
                        Ver +
                    </a>
                    <a class="btn btn-warning me-2" href="/articles/edit/<%= article.id%>" role="button">
                        Editar
                    </a>
                    <form action="/articles/<%= article.id%>?_method=DELETE" method="POST">
                        <button type="submit" class="btn btn-danger me-2">
                            Eliminar
                        </button>
                    </form>
                </div>
            </div>
            <br>
        <% }); %>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>

</html>